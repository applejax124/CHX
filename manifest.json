{
"manifest_version": 2,

"name":"ChromEx",
"description": "The basic boilerplate for creating a working chrome extension.",
"version":"0.0.0.0",

"omnibox":{"keyword": ";"},
"icons":{
  "16": "icons/icon.png"
},


"background": {
  "persistent":false,
	"scripts": [
    "scripts/background.js", 
    "scripts/modules/mail/gmail.js",
    "scripts/modules/mail/inbox.js",
    "scripts/modules/youtube.js",
    "scripts/modules/drive.js",
    "scripts/modules/wikipedia.js",
    "scripts/modules/chrome/chrome_settings.js",
    "scripts/modules/chrome/chrome_extensions.js",
    "scripts/modules/search/google.js"
  ]
},


"permissions":["tabs","bookmarks"]
}
